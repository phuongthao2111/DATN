@if (Model != null)
{
    @if (Model.Results != null && Model.Results.Count > 0)
    {
        <div class="row box-details custom-height">
            @if (Model.Results != null && Model.Results.Count > 0)
            {
                @foreach (var item in Model.Results)
                {
                    <div class="col-md-4">
                        <div class="blog-entry align-self-stretch">
                            <div class="text d-block pl-md-12">
                                <a href="/chi-tiet-bai-viet/@item.id" class="item-post">
                                    <div class="post-left">
                                        <img src="/product-post/@item.avatar" />
                                    </div>

                                    <div class="post-right">
                                        <h3 class="heading">
                                            @item.title
                                        </h3>
                                        <p class="short-content">@item.short_content</p>
                                    </div>

                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>       
    }
    else{
        <p style="width: 100%; text-align: center; margin-top: 100px;">Không tìm thấy kết quả</p>
    }
}
else
{
