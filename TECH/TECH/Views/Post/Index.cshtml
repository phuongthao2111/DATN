                <div class="row">
                    <div class="col-lg-9">
                        <div class="row box-details" style="margin-top: 20px;">
                            @if (Model.Results != null && Model.Results.Count > 0)
                            {
                                @foreach (var item in Model.Results)
                                {
                                    <div class="col-md-4">
