@section Scripts{
    <script src="~/admin/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script type="text/javascript">
        var self = this;
        $(document).ready(function() {
            ValidateUser();
        })

        function ValidateUser() {
             jQuery.validator.addMethod("headphone", function (value, element) {
                var vnf_regex = /((032|033|034|035|036|037|038|039|056|058|059|070|076|077|078|079|081|082|083|084|085|086|087|088|089|090|091|092|093|094|096|097|098|099)+([0-9]{7})\b)/g;
                return vnf_regex.test(value);
            });
            $("#contact").validate({
                rules:
                {
                    full_name: {
                        required: true,
                    },
                    phone: {
                        required: true,
                        headphone: true,
                        minlength: 10,
                        min: 0,
                        maxlength: 11,
                        number: isNaN
                    },
                    note: {
                        required: true
                    }
                },
                messages:
                {
                    full_name: {
                        required: "Số điện thoại không được để trống",
                        headphone: "Số điện thoại không hợp lệ"
                    },
                    phone: {
                        required: "Số điện thoại không được để trống",
                        minlength:"Số điện thoại từ 10 đến 11 kí tự",
                        maxlength: "Số điện thoại từ 10 đến 11 kí tự",
                        headphone:"Số điện thoại không hợp lệ",
                        number:"Số điện thoại không hợp lệ"
                    },
                    note: {
                        required: "Ghi chú không được để trống"
                    }
                },
                submitHandler: function(form) {
                    var UserModelView={
                        full_name: $("#full_name").val(),
                        phone_number: $("#phone").val(),
                        note: $("#note").val()
                    }
                    $.ajax({
                        type: "POST",
                        url: "/Admin/Contract/Add",
                        data: { UserModelView: UserModelView },
                        beforeSend: function() {
                            // tedu.start//Loading();
                            Loading('show');
                        },
                        complete: function () {
                             Loading('hide');
                        },
                        success: function(response) {
                            if(response.success){
                                $("#CartsModal").modal("show");                                
                            }
                        },
                        error: function() {
                            Loading('hide');
                        }
                    });
                }
            });
        }
    </script>
}
